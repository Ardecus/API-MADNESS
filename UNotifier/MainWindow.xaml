<Window x:Class="UNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei = "http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:local="clr-namespace:UNotifier"
        xmlns:codeforces="clr-namespace:Codeforces"
        mc:Ignorable="d"
        Title="UNotifier" Height="300" Width="300">

    <Grid>
        <Expander Header="Codeforces" IsExpanded="True">
            <Expander.DataContext>
                <codeforces:CodeforcesViewModel />
            </Expander.DataContext>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl  ItemsSource="{Binding Contests.Result}" HorizontalContentAlignment="Stretch">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding Path=background}" CornerRadius="5" BorderThickness="1" BorderBrush="Gray" Margin="15, 5" Padding="5, 2">
                                
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseEnter">
                                        <ei:CallMethodAction MethodName="SetWatched" TargetObject="{Binding}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                
                                <StackPanel Orientation="Vertical" >
                                    <Label FontSize="14" FontWeight="DemiBold" Content="{Binding Path=name}" />
                                    <Label Content="{Binding Path=startDateString}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Expander>
    </Grid>
</Window>
