<Application x:Class="UNotifier.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UNotifier"
             StartupUri="View/MainWindow.xaml">

    <Application.Resources>
        
        <SolidColorBrush x:Key="WatchedEntryBrush" Color="White"/>
        <SolidColorBrush x:Key="NewEntryBrush"     Color="#FFE8E8E8"/>

        <Style x:Key="Panel" TargetType="{x:Type Border}">
            <Setter Property="CornerRadius"    Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush"     Value="Silver"/>
            <Setter Property="Margin"          Value="15, 5"/>
            <Setter Property="Padding"         Value="5, 2"/>
        </Style>
        
    </Application.Resources>
</Application>
